{
  "manifest_version": 2,
  "name": "Live Transcription Assistant",
  "version": "1.0",
  "description": "Receives live transcriptions from local WebSocket server and helps insert them into web pages",

  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "<all_urls>",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*", "*://zoom.us/*", "*://teams.microsoft.com/*", "<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_title": "Live Transcription Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "web_accessible_resources": [
    "style.css"
  ]
}